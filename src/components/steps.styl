.step-container
	max-width: 75%
	margin: 20px auto
	position: relative
	display: flex
	&::after
		content: ''
		width: 100%
		height: 5px
		position: absolute
		top: calc(50% - 2.5px)
		left: 0
		z-index: 50
		background: black
		border-radius: 10px
	.step
		flex: 1
		display: flex
		justify-content: center
		&:first-child
			justify-content: start
		&:last-child
			justify-content: end
		span
			position: relative
			max-width: max-content
			max-width: -moz-max-content
			z-index: 51
			background: black
			color: white
			font-size: 1.5em
			border-radius: 50%
			padding: 7.5px 15px